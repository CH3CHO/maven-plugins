<?xml version="1.0" encoding="UTF-8"?>
<model model-package="com.dianping.liger.config.model" enable-sax-parser="true" enable-base-visitor="true" enable-json-builder="true" enable-json-parser="true" enable-native-builder="true" enable-native-parser="true">
	<entity name="liger" root="true" class-name="LigerModel">
		<entity-ref name="role" type="map" names="roles" method-find-or-create="true" />
	</entity>
	<entity name="role" class-name="RoleModel">
		<attribute name="id" value-type="String" key="true" />
		<entity-ref name="service" type="map" names="services" method-find-or-create="true" />
	</entity>
	<entity name="service" class-name="ServiceModel">
		<attribute name="id" value-type="String" key="true" />
		<entity-ref name="instance" type="list" names="instances" />
		<entity-ref name="template" type="map" names="templates" method-find-or-create="true" />
		<entity-ref name="property" type="map" names="properties" xml-indent="true" method-find-or-create="true" />
		<snippet>
			public InstanceModel findOrCreateInstanceBy(String name) {
				InstanceModel found = null;
		
				for (InstanceModel instance : getInstances()) {
					if (instance.getName().equals(name)) {
						found = instance;
						break;
					}
				}
		
				if (found == null) {
					found = new InstanceModel().setName(name);
					addInstance(found);
				}
		
				return found;
			}
		</snippet>
	</entity>
	<entity name="archetype" class-name="ArchetypeModel" dynamic-attributes="true">
		<attribute name="version" enabled="false" />
		<entity-ref name="property" type="map" names="properties" method-find-or-create="true" />
	</entity>
	<entity name="instance" class-name="InstanceModel" dynamic-attributes="true">
		<attribute name="id" value-type="String" key="true" />
		<attribute name="name" value-type="String" />
		<attribute name="lane" enabled="false" />
		<entity-ref name="property" type="map" names="properties" method-find-or-create="true" />
	</entity>
	<entity name="template" class-name="TemplateModel" dynamic-attributes="true">
		<attribute name="id" value-type="String" key="true" />
		<attribute name="database" enabled="false" />
		<attribute name="type" enabled="false" />
		<attribute name="lane" enabled="false" />
		<attribute name="idc" enabled="false" />
		<attribute name="start" enabled="false" />
		<attribute name="end" enabled="false" />
		<entity-ref name="property" type="map" names="properties" method-find-or-create="true" />
	</entity>
	<entity name="property" class-name="PropertyModel">
		<attribute name="key" value-type="String" key="true" />
		<element name="text" alias="value" value-type="String" text="true" />
	</entity>
</model>

